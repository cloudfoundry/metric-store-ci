#!/bin/bash

set -e

warning() {
  YELLOW='\033[0;33m'
  BOLD='\033[1m'
  CLEAR='\033[0m'
  local message=${1}

  echo -e "${YELLOW}${BOLD}${message}${CLEAR}"
}

error() {
  RED='\033[0;31m'
  BOLD='\033[1m'
  CLEAR='\033[0m'
  local message=${1}

  echo -e "${RED}${BOLD}${message}${CLEAR}"
}

success() {
  GREEN='\033[0;32m'
  BOLD='\033[1m'
  CLEAR='\033[0m'
  local message=${1}

  echo -e "${GREEN}${BOLD}${message}${CLEAR}"
}

step() {
    local message=${1}
    printf "%-46s ... " "${message}"
}

function check_lpass {
    step "Checking LastPass"

    set +e
    lpass_status=$(lpass status --color=never)
    lpass_logged_in=$?
    set -e

    if [ $lpass_logged_in -eq 0 ]; then
        success "${lpass_status}"
    else
        error "${lpass_status}"
        echo

        warning "please login to LastPass and try again"
        exit 1
    fi
}

function find_pipeline {
    step "Finding pipeline"
    query=${1}
    pipeline_dir='pipelines/'

    pushd ${pipeline_dir} > /dev/null
        top_level_pipelines=()
        other_pipelines=()

        while IFS=  read -r -d $'\n'; do
            normalized_pipeline=`echo ${REPLY} | cut -c 3-`
            top_level_pipelines+=("$normalized_pipeline")
        done < <(find . -maxdepth 1 -type f \( ! -name . \) | sort)

        while IFS=  read -r -d $'\0'; do
            normalized_pipeline=`echo ${REPLY} | cut -c 3-`
            other_pipelines+=($normalized_pipeline)
        done < <(find . -mindepth 2 -type f \( ! -name . \) -print0)
    popd > /dev/null

    pipeline=''

    if [[ ${query} != '' ]]; then
        # top level pipeline starts with query
        for p in "${top_level_pipelines[@]}"; do
            if [[ "${p}" == "${query}"* ]]; then
                pipeline=${p}
            fi
        done

        # top level pipeline substring matches query
        if [[ ${pipeline} = '' ]]; then
            for p in "${top_level_pipelines[@]}"; do
                if [[ "${p}" =~ "${query}" ]]; then
                    pipeline=${p}
                fi
            done
        fi

        # any pipeline substring matches query
        matching_pipelines=()
        if [[ ${pipeline} = '' ]]; then
            for p in "${other_pipelines[@]}"; do
                if [[ "${p}" =~ "${query}" ]]; then
                    matching_pipelines+=("${p}")
                fi
            done
        fi
    fi

    if [[ ${pipeline} = '' ]]; then
        if [[ ${#matching_pipelines[@]} -eq 1 ]]; then
            pipeline=${matching_pipelines[0]}
        elif [[ ${#matching_pipelines[@]} -eq 0 ]]; then
            error "found 0 matches for '${query}'"
            echo

            echo "Available pipelines are:"
            for p in "${top_level_pipelines[@]}"; do
                echo " - ${p}"
            done
            for p in "${other_pipelines[@]}"; do
                echo " - ${p}"
            done
            echo

            warning "Please adjust your query to match the an available pipeline and try again"
            exit 1
        else
            error "found ${#matching_pipelines[@]} matches for '${query}'"
            echo

            echo "Matching pipelines were:"
            for p in "${matching_pipelines[@]}"; do
                echo " - ${p}"
            done
            echo

            warning "Please adjust your query to match a specific pipeline and try again"
            exit 1
        fi
    fi

    success "found ${pipeline}"

    config_path=${pipeline_dir}${pipeline}

    if [[ "$pipeline" == pws* ]]; then
        TARGET="${TARGET:-pws}"
    else
        TARGET="${TARGET:-log-cache}"
    fi

    pipeline_name=$(echo "${pipeline}" | sed 's/\//-/g' | sed 's/.yml//' | sed 's/.erb//')
}

function validate_usage {
    if [ "$pipeline" = "-h" ] || [ "$pipeline" = "--help" ] || [ -z "$pipeline" ]; then
        print_usage
        exit 1
    fi
}

function validate_pipeline {
    step "Validating '${pipeline_name}' pipeline"

    set +e
    pipeline_validation=$(fly -t ${TARGET} validate-pipeline -c ${config_path} 2>&1)
    pipeline_valid=$?
    set -e

    if [ $pipeline_valid -eq 0 ]; then
        success "valid"
    else
        error "invalid"
        echo

        error "-- start of validation errors --"
        echo "${pipeline_validation}"
        error "-- end of validation errors --"
        echo
        warning "Please fix the above errors and try again"

        exit 1
    fi
}

function sync_fly {
    step "Checking fly CLI"

    set +e
    (fly -t $TARGET get-pipeline -p ${pipeline_name} &> /dev/null)
    noSyncRequired=$?
    set -e

    if [ $noSyncRequired -eq 0 ]; then
        success "sync not required"
    else
        warning "sync required"
        echo

        warning "-- start of sync --"
        fly -t $TARGET sync
        warning "-- end of sync --"
        echo
    fi
}

function login_fly {
    step "Checking fly auth status for '${TARGET}'"

    set +e
    fly_status=$(fly -t $TARGET status 2>&1)
    fly_logged_in=$?
    set -e

    if [ $fly_logged_in -eq 0 ]; then
        success "logged in"
    else
        warning "not logged in"
        echo

        warning "-- start of fly login --"
        fly -t $TARGET login -b
        warning "-- end of fly login --"
        echo
    fi
}

function preprocess_pipeline {
    if [[ "${pipeline}" == *".erb" ]]; then
        step "Preprocessing erb pipeline"
        tmpfile=$(mktemp)

        set +e
        $(command -v erb >/dev/null 2>&1)
        erb_available=$?
        set -e

        if [ $erb_available -eq 1 ]; then
            error "erb not found"
            echo

            warning "To process .erb pipelines, erb is required but not installed."
            exit 1
        fi

        set +e
        erb_output=$(erb ${config_path} > ${tmpfile} 2>&1)
        erb_processed=$?
        set -e

        if [ $erb_processed -eq 0 ]; then
            success "processed"
            config_path=${tmpfile}
        else
            error "erb failed"
            echo

            error "-- start of erb errors --"
            set +e
            erb ${config_path} > ${tmpfile}
            set -e
            error "-- end of erb errors --"
            echo

            warning "please fix the erb errors then try again"
            exit 1
        fi
    fi
}

function reconfigure_pipeline {
    reconfigure-pipeline \
      --target ${TARGET} \
      --pipeline ${pipeline_name} \
      --config ${config_path} \
      --load-vars-from config/env-config.yml
}

function fly_pipeline {
    step "Reconfiguring '${pipeline_name}' pipeline"

    set +e
    (echo "N" | reconfigure_pipeline | grep -Fxq "no changes to apply")
    noChanges=$?
    set -e

    if [ $noChanges -eq 0 ]; then
        success "no changes to apply"
    else
        warning "there are changes to apply"
        echo

        warning "-- start of changes --"
        reconfigure_pipeline
        warning "-- end of changes --"
        echo
    fi
}

function print_usage {
    echo "usage: $0 <pipeline>"
    echo " - where <pipeline> can be a substring of available pipeline paths"
}

function deprecation_warning {
    query=${1}

    if [[ "${query}" = "log-cache" ]]; then
        warning "the log-cache pipeline was renamed to acceptance.  Try that one instead ;)"
        exit 1
    fi
}

function cleanup {
    if [[ "${pipeline}" == *".erb" ]]; then
        rm ${tmpfile}
    fi
}

function main {
    deprecation_warning $1
    check_lpass
    find_pipeline $1
    validate_usage
    login_fly
    sync_fly
    preprocess_pipeline
    validate_pipeline

    if [ $? -eq 0 ]; then
        fly_pipeline
    fi

    cleanup

    success "DONE!"
}

main $1
